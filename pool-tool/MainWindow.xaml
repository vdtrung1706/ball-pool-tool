<Window x:Class="pool_tool.MainWindow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pool_tool"
        mc:Ignorable="d" WindowState="Maximized" WindowStyle="None" 
        AllowsTransparency="True"
        Title="8 ball pool tool" Loaded="Window_Loaded" Height="768" Width="1366">
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0.05"/>
    </Window.Background>
    <Canvas x:Name="cvBody">
        <!--#region MENU-->
        <Border Canvas.Left="815" Canvas.Top="160" Height="25"
                Background="#2c3632" CornerRadius="10">
            <StackPanel x:Name="menu"
                    Orientation="Horizontal" >
                <Button Background="Transparent"
                        Width="35" BorderThickness="0" Margin="5,0,0,0">
                    <Image Source="./Image/move.png" Height="17" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                <Button x:Name="btnSetting" Background="Transparent"
                        Click="btnSetting_Click" Width="25"
                        BorderThickness="0">
                    <Image Source="./Image/setting.png" Height="17" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <Button x:Name="btnClear" Background="Transparent"
                        Click="btnClear_Click" Width="25"
                        BorderThickness="0" Margin="5,0,0,0">
                    <Image Source="./Image/broom.png" Height="17" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>




                <Button x:Name="btnBalls" Click="btnBalls_Click"
                    Background="Transparent" BorderThickness="0" Width="25">
                    <Image Source="./Image/two-ball.png" Height="17" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>

                <Button x:Name="btnLine" Background="Transparent"
                        BorderThickness="0" Width="25">
                    <Image Source="./Image/diagonal-line.png" Height="15" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>

                <Button x:Name="btnUpArrow" 
                    Background="Transparent" BorderThickness="0" Margin="5,0,0,0"
                    Click="btnUpArrow_Click">
                    <Image Source="./Image/up-arrow.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                <Button x:Name="btnDownArrow"
                        Background="Transparent" BorderThickness="0"
                        Click="btnDownArrow_Click">
                    <Image Source="./Image/down-arrow.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                <Button x:Name="btnRightArrow" Click="btnRightArrow_Click"
                    Background="Transparent" BorderThickness="0">
                    <Image Source="./Image/right-arrow.png" Height="18" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                <Button x:Name="btnLeftArrow" Margin="0,0,20,0" Click="btnLeftArrow_Click"
                    Background="Transparent" BorderThickness="0">
                    <Image Source="./Image/left-arrow.png" Height="18" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
            </StackPanel>

        </Border>
        <!--#endregion-->
        <!--#region  TABLE-->
        <Border x:Name="brdTable" Height="{Binding Path=height}" Width="{Binding Path=width}" Background="Transparent"
                 BorderBrush="#009cf0" MinWidth="400" MinHeight="400" BorderThickness="3" Margin="231,207,0,0">
            <Canvas x:Name="cvtable">
                <Ellipse x:Name="ellipse1" Height="{Binding Path=ballSize}" Width="{Binding Path=ballSize}" 
                         Stroke="White" StrokeThickness="1"
                         AllowDrop="True" Visibility="Hidden"
                         MouseDown="ellipse1_MouseDown"
                         MouseUp="ellipse1_MouseUp"
                         MouseMove="ellipse1_MouseMove">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="White" Opacity="0.005"/>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <Ellipse x:Name="ellipse2" Height="{Binding Path=ballSize}" Width="{Binding Path=ballSize}" 
                         Stroke="#ff8e24" StrokeThickness="1"
                         AllowDrop="True" Visibility="Hidden"
                         MouseDown="ellipse1_MouseDown"
                         MouseUp="ellipse1_MouseUp"
                         MouseMove="ellipse1_MouseMove">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="White" Opacity="0.005"/>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <Line x:Name="line1" Stroke="Green" Opacity="0.5" StrokeEndLineCap="Round" StrokeStartLineCap="Round" StrokeThickness="5"/>
                <Line x:Name="line2" Stroke="Green" Opacity="0.5" StrokeEndLineCap="Round" StrokeStartLineCap="Round" StrokeThickness="5"/>
            </Canvas>
        </Border>
        <!--#endregion-->
    </Canvas>
</Window>
